<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Crawler" Height="846.207" Width="1559.995" Background="WhiteSmoke">
    <Grid Margin="0,0,5,-17.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="974*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="340*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="628*"/>
            <RowDefinition Height="559*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Left" x:Name="UrlTextBox0" Height="36" Margin="1,0.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Grid.Row="1" Grid.Column="2" />
        <Button Content="Crawl !" Name="CrawBtn" Click="StartCrawl" HorizontalAlignment="Left" Margin="97,328.5,0,0" VerticalAlignment="Top" Width="216" Height="38" Grid.Row="1" Grid.Column="2"/>
        <Label Content="Sub Urls" HorizontalAlignment="Left" Height="26" Margin="437,16,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2" Grid.RowSpan="2"/>
        <Label Content="Url" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="289" Margin="1.5,15,0,0" RenderTransformOrigin="0.928,1.346" Grid.Column="2"/>
        <Label Content="Content" HorizontalAlignment="Left" Height="26" Margin="987,16,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2" Grid.RowSpan="2"/>
        <TextBox Text="1" HorizontalAlignment="Left" x:Name="DepthTextBox" Height="36" Margin="231,0.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" Grid.Row="1" Grid.Column="2"/>
        <Label Content="Depth" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="57" Margin="234,14,0,0" Grid.Column="2"/>
        <TextBox Text="0" HorizontalAlignment="Left" x:Name="HostDepthTextBox" Height="36" Margin="296,0.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" Grid.Row="1" Grid.Column="2"/>
        <Label Content="Host-Depth" HorizontalAlignment="Left" Width="76" Margin="305,14,0,418" Grid.Column="2" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-3.946"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.931"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox HorizontalAlignment="Left" x:Name="SearchKeywordTextBox" Height="36" Margin="1.5,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289" Grid.Row="2" Grid.Column="2"/>
        <Label Content="Search Keyword" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="104" Margin="12,15,0,0" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"/>
        <ListView Name="SubUrlListView" Grid.Column="2" HorizontalAlignment="Left" Height="741" Margin="437.5,2,0,0" Grid.Row="1" VerticalAlignment="Top" Width="488" Grid.RowSpan="2">
            <ListView.ItemTemplate >
                <DataTemplate DataType="">
                    <WrapPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<ListView Name="UrlListView" Grid.Column="2" HorizontalAlignment="Left" Height="194" Margin="1,78.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="420">-->
        <DataGrid x:Name="UrlDataGrid" Grid.Column="2" HorizontalAlignment="Left" Height="194" Margin="1,78.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="420" AutoGenerateColumns="false" CanUserDeleteRows="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Url" Width="215" Binding="{Binding Url}"/>
                    <DataGridTextColumn Header="Depth" Width="60" Binding="{Binding Depth}"/>
                    <DataGridTextColumn Header="HostDepth" Width="70" Binding="{Binding HostDepth}"/>
                <DataGridTemplateColumn Header="Remove" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" Click="RemoveBtn_Click" Tag="{Binding}" IsEnabled="True"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!--<ListView.View>
                <GridView x:Name="UrlGridView">
                    <GridViewColumn Header="Url" Width="230" DisplayMemberBinding="{Binding Path=Url}" />
                    <GridViewColumn Header="Depth" Width="65" DisplayMemberBinding="{Binding Path=Depth}" />
                    <GridViewColumn Header="HostDepth" Width="75" DisplayMemberBinding="{Binding Path=HostDepth}" />
                    <GridViewColumn x:Name="RemoveBtnColumn" Width="40" DisplayMemberBinding="{Binding Path=RemoveBtn}"/>
                </GridView>
           </ListView.View>-->
        <Button Content="Add" Grid.Column="2" HorizontalAlignment="Left" Margin="374,0.5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="47" Height="36" Click="Button_Click"/>
        <Label Content="List of urls to be crawled" HorizontalAlignment="Left" Height="26" VerticalAlignment="Top" Width="289" Margin="1.5,47,0,0" RenderTransformOrigin="0.928,1.346" Grid.Column="2" Grid.Row="1"/>
    </Grid>
</Window>
